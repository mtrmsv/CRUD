@page
@model EndPoint.Site.Pages.Roles.DeleteModel
@{
}
<div>
    <table>
        <thead>
            <tr>
                <th>@(Resources.DataDictionary.Id)</th>
                <th>@(Resources.DataDictionary.RoleName)</th>
                <th>@(Resources.DataDictionary.IsActive)</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>@(Model.RoleViewModel.Id)</td>
                <td>@(Model.RoleViewModel.Name)</td>
                <td>@(Model.RoleViewModel.IsActive)</td>
            </tr>
        </tbody>
    </table>
    <div>
        <button type="button" class="btn btn-primary mx-1" onclick="openModal()">@(Resources.ButtonCaptions.Delete)</button>
    </div>
</div>


<div class="modal fade" id="delete-conformation" data-bs-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="deleteconformationLabel">
	<div class="modal-dialog modal-dialog-centered w-100">
		<div class="modal-content">
			<div class="modal-header bg-danger">
				<p class="modal-title fw-bold" id="delete-conformation">
					@*@(Resources.PageTitles.DeleteUser)*@
				</p>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="form-group">
						<div class="col-sm-12">
							<span>
								@(Resources.ErrorMessage.ConfirmDelete)
							</span>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" onclick="closeModal()">
						@(Resources.ButtonCaptions.Cancel)
					</button>
					<form asp-page-handler="Delete" asp-route-id="@(Model.RoleViewModel.Id)" method="post">
						<input type="hidden" />
						<button class="btn btn-danger">
							@(Resources.ButtonCaptions.Delete)
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>

<script type="text/javascript">

    function openModal() {
        $('#delete-conformation').modal('show')
    }

    function closeModal() {
        $('#delete-conformation').modal('hide')
    }

</script>